---
import "../styles/global.css";
import { getCollection } from "astro:content";
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro'
import BlogPost from "../components/BlogPost.astro";
const allPosts = await getCollection("blog");
import BaseLayout from "../layout/BaseLayout.astro";
---

<BaseLayout pageTitle="Blog">
        <!-- All tags -->
        <!-- Blogs should be listed in a grid-->
        <div class="px-4 py-8 sm:px-6 lg:px-12 max-w-screen-xl mx-auto">
            <ul class="grid sm:grid-cols-1  lg:grid-cols-3 gap-6">
            {allPosts.map((post: any) =><BlogPost url={`/blogs/${post.id}/`} frontmatter={post.data}  />)}
        </ul>
        </div>
        
</BaseLayout>