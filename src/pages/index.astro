---
import "../styles/global.css"
import BaseLayout from "../layout/BaseLayout.astro"
import { getCollection } from "astro:content";
import BlogPost from "../components/BlogPost.astro";

const allPosts = await getCollection("blog");
const recentPosts = allPosts.slice(0, 3);
---

<BaseLayout pageTitle="Home">
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-blue-50 via-white to-cyan-50 dark:from-gray-900 dark:via-gray-800 dark:to-blue-900">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-20 left-20 w-72 h-72 bg-blue-500 rounded-full mix-blend-multiply filter blur-xl animate-pulse"></div>
      <div class="absolute top-40 right-20 w-72 h-72 bg-cyan-500 rounded-full mix-blend-multiply filter blur-xl animate-pulse delay-1000"></div>
      <div class="absolute bottom-20 left-1/2 w-72 h-72 bg-blue-600 rounded-full mix-blend-multiply filter blur-xl animate-pulse delay-2000"></div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center animate-fade-in-up">
        <!-- Logo/Icon -->
        <div class="flex justify-center mb-8">
          <div class="p-4 bg-gradient-to-br from-blue-600 to-cyan-500 rounded-2xl shadow-xl">
            <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17.8 19.2 16 11l3.5-3.5C21 6 21.5 4 21 3c-1-.5-3 0-4.5 1.5L13 8 4.8 6.2c-.5-.1-.9.1-1.1.5l-.3.5c-.2.5-.1 1 .3 1.3L9 12l-2 3H4l-1 1 3 2 2 3 1-1v-3l3-2 3.5 5.3c.3.4.8.5 1.3.3l.5-.2c.4-.3.6-.7.5-1.2z"/>
            </svg>
          </div>
        </div>

        <!-- Main Heading -->
        <h1 class="text-display gradient-text mb-6 max-w-4xl mx-auto">
          Soaring Beyond Limits with <span class="text-blue-600 dark:text-blue-400">Avions</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-body-lg text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
          Join our aerospace and drone engineering club where innovation meets the sky. 
          Build, fly, and compete with cutting-edge UAV technology.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
          <a href="/about" class="btn btn-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="m22 21-3-3m0 0a5.5 5.5 0 1 0-7.8-7.8 5.5 5.5 0 0 0 7.8 7.8Z"/>
            </svg>
            Join Our Team
          </a>
          <a href="/blog" class="btn btn-secondary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"/>
              <path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/>
              <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"/>
              <path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"/>
            </svg>
            Explore Projects
          </a>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 max-w-2xl mx-auto">
          <div class="text-center">
            <div class="text-h2 font-bold text-blue-600 dark:text-blue-400">50+</div>
            <div class="text-body text-gray-600 dark:text-gray-400">Successful Flights</div>
          </div>
          <div class="text-center">
            <div class="text-h2 font-bold text-blue-600 dark:text-blue-400">15+</div>
            <div class="text-body text-gray-600 dark:text-gray-400">Active Members</div>
          </div>
          <div class="text-center">
            <div class="text-h2 font-bold text-blue-600 dark:text-blue-400">5+</div>
            <div class="text-body text-gray-600 dark:text-gray-400">Competitions Won</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-gray-400 rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="m9 18 6-6-6-6"/>
      </svg>
    </div>
  </section>

  <!-- Features Section -->
  <section class="section-padding bg-white dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-h1 gradient-text mb-4">What We Do</h2>
        <p class="text-body-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          From autonomous drones to competitive flying, we're pushing the boundaries of aerospace technology
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="card p-8 text-center group">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-500 rounded-xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"/>
              <path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/>
              <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"/>
              <path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"/>
            </svg>
          </div>
          <h3 class="text-h3 mb-4 text-gray-900 dark:text-white">Autonomous Systems</h3>
          <p class="text-body text-gray-600 dark:text-gray-300">
            Design and build fully autonomous drones capable of navigation, obstacle avoidance, and precision delivery.
          </p>
        </div>

        <!-- Feature 2 -->
        <div class="card p-8 text-center group">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-500 rounded-xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/>
              <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/>
              <path d="M4 22h16"/>
              <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/>
              <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/>
              <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/>
            </svg>
          </div>
          <h3 class="text-h3 mb-4 text-gray-900 dark:text-white">Competitions</h3>
          <p class="text-body text-gray-600 dark:text-gray-300">
            Participate in national and international drone competitions, showcasing our engineering excellence.
          </p>
        </div>

        <!-- Feature 3 -->
        <div class="card p-8 text-center group">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-500 rounded-xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="m22 21-3-3m0 0a5.5 5.5 0 1 0-7.8-7.8 5.5 5.5 0 0 0 7.8 7.8Z"/>
            </svg>
          </div>
          <h3 class="text-h3 mb-4 text-gray-900 dark:text-white">Team Collaboration</h3>
          <p class="text-body text-gray-600 dark:text-gray-300">
            Work with passionate engineers across hardware, software, and flight dynamics specializations.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Blog Posts -->
  <section class="section-padding bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center mb-12">
        <div>
          <h2 class="text-h1 gradient-text mb-4">Latest Updates</h2>
          <p class="text-body-lg text-gray-600 dark:text-gray-300">
            Stay updated with our latest projects and achievements
          </p>
        </div>
        <a href="/blog" class="btn btn-ghost hidden sm:flex">
          View All Posts
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"/>
            <path d="m12 5 7 7-7 7"/>
          </svg>
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {recentPosts.map((post) => (
          <BlogPost url={`/blogs/${post.id}/`} frontmatter={post.data} />
        ))}
      </div>

      <div class="text-center mt-8 sm:hidden">
        <a href="/blog" class="btn btn-ghost">
          View All Posts
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"/>
            <path d="m12 5 7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Upcoming Events -->
  <section class="section-padding bg-white dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-h1 gradient-text mb-4">Upcoming Events</h2>
        <p class="text-body-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Join us for workshops, competitions, and collaborative projects
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <!-- Event 1 -->
        <div class="card p-6 hover:shadow-xl transition-all">
          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-600 to-cyan-500 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M8 2v4"/>
                <path d="M16 2v4"/>
                <rect width="18" height="18" x="3" y="4" rx="2"/>
                <path d="M3 10h18"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-h3 mb-2 text-gray-900 dark:text-white">Drone Building Workshop</h3>
              <div class="flex items-center text-gray-500 dark:text-gray-400 mb-2">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
                <span class="text-body-sm">Engineering Lab, Room 204</span>
              </div>
              <p class="text-body text-gray-600 dark:text-gray-300">
                Learn the fundamentals of drone assembly and programming in this hands-on workshop.
              </p>
            </div>
          </div>
        </div>

        <!-- Event 2 -->
        <div class="card p-6 hover:shadow-xl transition-all">
          <div class="flex items-start space-x-4">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-600 to-cyan-500 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/>
                <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/>
                <path d="M4 22h16"/>
                <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/>
                <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/>
                <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-h3 mb-2 text-gray-900 dark:text-white">Inter-College Competition</h3>
              <div class="flex items-center text-gray-500 dark:text-gray-400 mb-2">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
                <span class="text-body-sm">Main Campus Ground</span>
              </div>
              <p class="text-body text-gray-600 dark:text-gray-300">
                Showcase your skills in our annual drone racing and autonomous navigation challenge.
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="text-center mt-12">
        <a href="/events" class="btn btn-primary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M8 2v4"/>
            <path d="M16 2v4"/>
            <rect width="18" height="18" x="3" y="4" rx="2"/>
            <path d="M3 10h18"/>
          </svg>
          View All Events
        </a>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="section-padding bg-gradient-to-br from-blue-50 to-cyan-50 dark:from-gray-800 dark:to-blue-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-h1 gradient-text mb-4">What Our Members Say</h2>
        <p class="text-body-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Hear from our passionate team members about their experience with Avions
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Testimonial 1 -->
        <div class="card p-6">
          <div class="flex items-center mb-4">
            {[...Array(5)].map((_, i) => (
              <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"/>
              </svg>
            ))}
          </div>
          <p class="text-body text-gray-600 dark:text-gray-300 mb-4">
            "Joining Avions was the best decision of my college life. The hands-on experience with autonomous systems has been incredible."
          </p>
          <div class="flex items-center">
            <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-cyan-500 rounded-full flex items-center justify-center text-white font-semibold">
              A
            </div>
            <div class="ml-3">
              <div class="font-semibold text-gray-900 dark:text-white">Akshat Navlani</div>
              <div class="text-body-sm text-gray-500 dark:text-gray-400">Software Lead</div>
            </div>
          </div>
        </div>

        <!-- Testimonial 2 -->
        <div class="card p-6">
          <div class="flex items-center mb-4">
            {[...Array(5)].map((_, i) => (
              <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"/>
              </svg>
            ))}
          </div>
          <p class="text-body text-gray-600 dark:text-gray-300 mb-4">
            "The collaborative environment and cutting-edge projects have shaped my understanding of aerospace engineering."
          </p>
          <div class="flex items-center">
            <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-cyan-500 rounded-full flex items-center justify-center text-white font-semibold">
              M
            </div>
            <div class="ml-3">
              <div class="font-semibold text-gray-900 dark:text-white">Member Name</div>
              <div class="text-body-sm text-gray-500 dark:text-gray-400">Hardware Engineer</div>
            </div>
          </div>
        </div>

        <!-- Testimonial 3 -->
        <div class="card p-6">
          <div class="flex items-center mb-4">
            {[...Array(5)].map((_, i) => (
              <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"/>
              </svg>
            ))}
          </div>
          <p class="text-body text-gray-600 dark:text-gray-300 mb-4">
            "From competitions to real-world applications, Avions provides the perfect platform for innovation."
          </p>
          <div class="flex items-center">
            <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-cyan-500 rounded-full flex items-center justify-center text-white font-semibold">
              T
            </div>
            <div class="ml-3">
              <div class="font-semibold text-gray-900 dark:text-white">Team Member</div>
              <div class="text-body-sm text-gray-500 dark:text-gray-400">Flight Dynamics</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="section-padding bg-gradient-to-r from-blue-600 to-cyan-500 text-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-h1 mb-4">Ready to Take Flight?</h2>
      <p class="text-body-lg mb-8 max-w-2xl mx-auto opacity-90">
        Join our community of innovators and help shape the future of aerospace technology. 
        Whether you're a beginner or expert, there's a place for you in Avions.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/about" class="btn bg-white text-blue-600 hover:bg-gray-100">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
            <circle cx="9" cy="7" r="4"/>
            <path d="m22 21-3-3m0 0a5.5 5.5 0 1 0-7.8-7.8 5.5 5.5 0 0 0 7.8 7.8Z"/>
          </svg>
          Join Our Team
        </a>
        <a href="/blog" class="btn border-2 border-white text-white hover:bg-white hover:text-blue-600">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"/>
            <path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/>
            <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"/>
            <path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"/>
          </svg>
          Learn More
        </a>
      </div>
    </div>
  </section>
</BaseLayout>