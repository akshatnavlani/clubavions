---
import "../styles/global.css"
import BaseLayout from "../layout/BaseLayout.astro"
import { getCollection } from "astro:content";
import BlogPost from "../components/BlogPost.astro";
import MemberCard from "../components/MemberCard.astro";
import Testimonial from "../components/Testimonial.astro";
const allPosts = await getCollection("blog");
const allMembers = await getCollection("member");
const recentPosts = allPosts.slice(0, 3);
---

<BaseLayout pageTitle="Home">
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-blue-50 via-white to-cyan-50 dark:from-gray-900 dark:via-gray-800 dark:to-blue-900">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-20 left-20 w-72 h-72 bg-blue-500 rounded-full mix-blend-multiply filter blur-xl animate-pulse"></div>
      <div class="absolute top-40 right-20 w-72 h-72 bg-cyan-500 rounded-full mix-blend-multiply filter blur-xl animate-pulse delay-1000"></div>
      <div class="absolute bottom-20 left-1/2 w-72 h-72 bg-blue-600 rounded-full mix-blend-multiply filter blur-xl animate-pulse delay-2000"></div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center animate-fade-in-up">
        <!-- Logo/Icon -->
        <div class="flex justify-center mb-8">
          <div class="p-4 bg-gradient-to-br from-blue-600 to-cyan-500 rounded-2xl shadow-xl">
            <img src="/favicon.svg" alt="Avions Logo" class="w-16 h-16" />
          </div>
        </div>

        <!-- Main Heading -->
        <h1 class="text-6xl md:text-7xl font-bold gradient-text mb-6 max-w-4xl mx-auto">
          Soaring Beyond Limits with <span class="text-blue-600 dark:text-blue-400">Avions</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8  mx-auto">
          Join our aerospace and drone engineering club where innovation meets the sky. 
          Build, fly, and compete with cutting-edge UAV technology.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
          <a href="/about" class="btn btn-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="m22 21-3-3m0 0a5.5 5.5 0 1 0-7.8-7.8 5.5 5.5 0 0 0 7.8 7.8Z"/>
            </svg>
            Join Our Team
          </a>
          <a href="/blog" class="btn btn-secondary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"/>
              <path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/>
              <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"/>
              <path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"/>
            </svg>
            Explore Projects
          </a>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-8   mx-auto">
          <div class="text-center">
            <div class="text-4xl font-bold text-blue-600 dark:text-blue-400">50+</div>
            <div class="text-base text-gray-600 dark:text-gray-400">Successful Flights</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-blue-600 dark:text-blue-400">15+</div>
            <div class="text-base text-gray-600 dark:text-gray-400">Active Members</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-blue-600 dark:text-blue-400">5+</div>
            <div class="text-base text-gray-600 dark:text-gray-400">Competitions Won</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-gray-400 rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="m9 18 6-6-6-6"/>
      </svg>
    </div>
  </section>

  <!-- Features Section -->
  <section class="section-padding bg-white dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-5xl font-bold gradient-text mb-4">What We Do</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300   mx-auto">
          From autonomous drones to competitive flying, we're pushing the boundaries of aerospace technology
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="card p-8 text-center group">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-500 rounded-xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"/>
              <path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/>
              <path d="M9 12H4s.55-3.03 2-4c1.62-1.08 5 0 5 0"/>
              <path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-5 0-5"/>
            </svg>
          </div>
          <h3 class="text-2xl font-semibold mb-4 text-gray-900 dark:text-white">Autonomous Systems</h3>
          <p class="text-base text-gray-600 dark:text-gray-300">
            Design and build fully autonomous drones capable of navigation, obstacle avoidance, and precision delivery.
          </p>
        </div>

        <!-- Feature 2 -->
        <div class="card p-8 text-center group">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-500 rounded-xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M6 9H4.5a2.5 2.5 0 0 1 0-5H6"/>
              <path d="M18 9h1.5a2.5 2.5 0 0 0 0-5H18"/>
              <path d="M4 22h16"/>
              <path d="M10 14.66V17c0 .55-.47.98-.97 1.21C7.85 18.75 7 20.24 7 22"/>
              <path d="M14 14.66V17c0 .55.47.98.97 1.21C16.15 18.75 17 20.24 17 22"/>
              <path d="M18 2H6v7a6 6 0 0 0 12 0V2Z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-semibold mb-4 text-gray-900 dark:text-white">Competitions</h3>
          <p class="text-base text-gray-600 dark:text-gray-300">
            Participate in national and international drone competitions, showcasing our engineering excellence.
          </p>
        </div>

        <!-- Feature 3 -->
        <div class="card p-8 text-center group">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-500 rounded-xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="m22 21-3-3m0 0a5.5 5.5 0 1 0-7.8-7.8 5.5 5.5 0 0 0 7.8 7.8Z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-semibold mb-4 text-gray-900 dark:text-white">Team Collaboration</h3>
          <p class="text-base text-gray-600 dark:text-gray-300">
            Work with passionate engineers across hardware, software, and flight dynamics specializations.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Members Carousel -->
  <section class="section-padding bg-white dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-5xl font-bold gradient-text mb-4">Our Team</h2>
        <p class="m-12 text-xl text-gray-600 dark:text-gray-300 ">
          Meet the passionate engineers and innovators behind Avions
        </p>
      </div>

      <div class="relative" >
        <!-- Carousel Container -->
        <div id="members-carousel" class="overflow-hidden">
          <div id="carousel-track" class="flex transition-transform duration-500 ease-in-out">
            {allMembers.map((member) => (
              <div class="flex-none w-full sm:w-1/2 lg:w-1/3 px-4">
                <MemberCard member={member.data} url={`/members/${member.id}/`} />
              </div>
            ))}
          </div>
        </div>

        <!-- Navigation Buttons -->
        <button 
          id="prev-btn" 
          class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-4 bg-white dark:bg-gray-800 rounded-full p-3 shadow-lg hover:shadow-xl transition-all z-10"
          aria-label="Previous member"
        >
          <svg class="w-6 h-6 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m15 18-6-6 6-6"/>
          </svg>
        </button>
        
        <button 
          id="next-btn" 
          class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-4 bg-white dark:bg-gray-800 rounded-full p-3 shadow-lg hover:shadow-xl transition-all z-10"
          aria-label="Next member"
        >
          <svg class="w-6 h-6 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m9 18 6-6-6-6"/>
          </svg>
        </button>

        <!-- Dots Indicator -->
        <div class="flex justify-center mt-8 space-x-2">
          {allMembers.map((_, index) => (
            <button 
              class="carousel-dot w-3 h-3 rounded-full bg-gray-300 dark:bg-gray-600 transition-colors"
              data-index={index}
              aria-label={`Go to member ${index + 1}`}
            ></button>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Blog Posts -->
  <section class="section-padding bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center mb-12">
        <div >
          <h2 class="text-5xl font-bold gradient-text mb-4">Latest Updates</h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            Stay updated with our latest projects and achievements
          </p>
        </div>
        <a href="/blog" class="btn btn-ghost hidden sm:flex">
          View All Posts
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"/>
            <path d="m12 5 7 7-7 7"/>
          </svg>
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 my-2xl">
        {recentPosts.map((post) => (
          <BlogPost url={`/blogs/${post.id}/`} frontmatter={post.data} />
        ))}
      </div>

      <div class="text-center mt-8 sm:hidden">
        <a href="/blog" class="btn btn-ghost">
          View All Posts
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"/>
            <path d="m12 5 7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <!-- <Testimonial /> -->

  <!-- Call to Action -->
  

  <script>
    // Carousel functionality
    document.addEventListener('DOMContentLoaded', function() {
      const track = document.getElementById('carousel-track');
      const prevBtn = document.getElementById('prev-btn');
      const nextBtn = document.getElementById('next-btn');
      const dots = document.querySelectorAll('.carousel-dot');
      
      let currentIndex = 0;
      const totalMembers = dots.length;
      let itemsPerView = 1;
      
      // Calculate items per view based on screen size
      function updateItemsPerView() {
        if (window.innerWidth >= 1024) {
          itemsPerView = 3;
        } else if (window.innerWidth >= 640) {
          itemsPerView = 2;
        } else {
          itemsPerView = 1;
        }
      }
      
      function updateCarousel() {
        const translateX = -(currentIndex * (100 / itemsPerView));
        track.style.transform = `translateX(${translateX}%)`;
        
        // Update dots
        dots.forEach((dot, index) => {
          if (index === currentIndex) {
            dot.classList.add('bg-blue-600', 'dark:bg-blue-400');
            dot.classList.remove('bg-gray-300', 'dark:bg-gray-600');
          } else {
            dot.classList.remove('bg-blue-600', 'dark:bg-blue-400');
            dot.classList.add('bg-gray-300', 'dark:bg-gray-600');
          }
        });
      }
      
      function nextSlide() {
        currentIndex = (currentIndex + 1) % Math.max(1, totalMembers - itemsPerView + 1);
        updateCarousel();
      }
      
      function prevSlide() {
        currentIndex = currentIndex === 0 ? Math.max(0, totalMembers - itemsPerView) : currentIndex - 1;
        updateCarousel();
      }
      
      // Event listeners
      nextBtn.addEventListener('click', nextSlide);
      prevBtn.addEventListener('click', prevSlide);
      
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          currentIndex = Math.min(index, totalMembers - itemsPerView);
          updateCarousel();
        });
      });
      
      // Auto-play
      setInterval(nextSlide, 5000);
      
      // Initialize
      updateItemsPerView();
      updateCarousel();
      
      // Update on resize
      window.addEventListener('resize', () => {
        updateItemsPerView();
        currentIndex = Math.min(currentIndex, Math.max(0, totalMembers - itemsPerView));
        updateCarousel();
      });
    });
  </script>
</BaseLayout>