---
import BaseLayout from '../../layout/BaseLayout.astro';
import { getCollection } from 'astro:content';
const allPosts = await getCollection('member');
const tags = [...new Set(allPosts.map((post: any) => post.data.events).flat())];
const pageTitle = "Events Index";
---
<BaseLayout pageTitle={pageTitle}>
  <span class="tags">
    {tags.map((tag) => (
      <a href={`/events/${tag}`}><p class="tag">{tag}</p></a>
    ))}
  </span>
</BaseLayout>
<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>